<div class="component__inner hotgrid__inner">
  {{> component this}}
  <div class="component__widget hotgrid__widget">
    <div role="list" class="hotgrid-grid">
      <div class="hotgrid-grid-inner u-clearfix">
        {{#each _items}}
        <div role="listitem" class="hotgrid-grid-listitem">
          <button class="base hotgrid-grid-item hotgrid-item-states-{{#all _graphic.srcHover _graphic.srcVisited}}image{{else}}css{{/all}}{{#if _isVisited}} is-visited{{/if}}" data-index="{{@index}}">

            <span class="aria-label">
              {{#if _graphic.title}}{{_graphic.title}}{{else}}{{../_globals._accessibility._ariaLabels.item}} {{numbers @index}}{{/if}}.{{#if _graphic.alt}} {{_graphic.alt}}.{{/if}}
            </span>

            <div class="hotgrid-item-image">
              <img src="{{_graphic.src}}" class="hotgrid-item-image-default"/>
              {{#all _graphic.srcHover _graphic.srcVisited}}
              <img src="{{_graphic.srcHover}}" class="hotgrid-item-image-hover"/>
              <img src="{{_graphic.srcVisited}}" class="hotgrid-item-image-visited"/>
              {{/all}}
              {{#if _graphic.title}}
              <div class="hotgrid-item-title" aria-hidden="true">
                <div class="hotgrid-item-title-inner">
                  {{_graphic.title}}
                </div>
              </div>
              {{/if}}
            </div>
          </button>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
