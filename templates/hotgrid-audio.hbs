<div class="component-inner hotgrid-inner" role="region" aria-label="{{_globals._components._hotgrid.ariaRegion}}" {{#if _globals._components._hotgrid.ariaRegion}}tabindex="0"{{/if}}>
  {{> component this}}
  <div class="component-widget hotgrid-widget">
    <div class="hotgrid-grid">
      <div class="hotgrid-grid-inner clearfix">
        {{#each _items}}
        <div class="hotgrid-grid-item {{#if visited}}visited{{/if}}">
          <button class="base hotgrid-item-image hotgrid-item-states-{{#if _graphic.hasImageStates}}image{{else}}css{{/if}}" role="button" aria-label="{{#if _graphic.title}}{{_graphic.title}}.{{/if}}{{#if _graphic.alt}} {{_graphic.alt}}.{{/if}}{{#if visited}} {{../../_globals._accessibility._ariaLabels.visited}}.{{/if}}">
            <img src="{{_graphic.src}}"/>
            {{#if _graphic.hasImageStates}}
              <img src="{{_graphic.srcHover}}" class="hotgrid-item-image-hover"/>
              <img src="{{_graphic.srcVisited}}" class="hotgrid-item-image-visited"/>
            {{/if}}
          </button>
          {{#if _graphic.title}}
            <div class="hotgrid-item-title">{{_graphic.title}}</div>
          {{/if}}
        </div>
        {{/each}}
      </div>
    </div>
    <div class="hotgrid-popup" role="dialog" aria-label="{{_globals._components._hotgrid.ariaPopupLabel}}">
      <div class="hotgrid-popup-inner">
        <div class="hotgrid-popup-content">
          <div class="hotgrid-popup-content-inner">
            {{#each _items}}
            <div class="hotgrid-popup-item item-{{@index}}">
              {{#if title}}
              <div class="hotgrid-popup-title">
                <div class="hotgrid-popup-title-inner h5" tabindex="0" role="heading" aria-level="1">
                  {{{title}}}
                </div>
              </div>
              {{/if}}
              {{#if body}}
                <div class="hotgrid-popup-body">
                  <div class="hotgrid-popup-body-inner">
                    {{{a11y_text body}}}
                  </div>
                </div>
              {{/if}}
              {{#if _itemGraphic}}
                <div class="hotgrid-popup-graphic">
                  <div class="hotgrid-popup-graphic-inner">
                    <img src="{{_itemGraphic.src}}" aria-label="{{_itemGraphic.alt}}" tabindex="0"/>
                  </div>
                </div>
              {{/if}}
            </div>
            {{/each}}
            {{#if _canCycleThroughPagination}}
            <div class="hotgrid-popup-navigation">
              <button class="base hotgrid-popup-arrow hotgrid-popup-back" role="button" aria-label="{{_globals._accessibility._ariaLabels.previous}}">
                <div class="icon icon-controls-left"></div>
              </button>
              <button class="base hotgrid-popup-arrow hotgrid-popup-next" role="button" aria-label="{{_globals._accessibility._ariaLabels.next}}">
                <div class="icon icon-controls-right"></div>
              </button>
            </div>
            {{/if}}
          </div>
        </div>
        <div class="hotgrid-popup-buttons">
          <button class="hotgrid-popup-close" role="button" aria-label="{{_globals._accessibility._ariaLabels.closePopup}}">{{close}}</button>
        </div>
      </div>
    </div>
  </div>
</div>
